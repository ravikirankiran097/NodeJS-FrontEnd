pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/ravikirankiran097/NodeJS-FrontEnd.git'
      }
    }
        
    stage('Install dependencies') {
      steps {
        sh 'npm install npm --global'
        sh 'npm install lite-server -g'
        sh 'npm install -g @angular/cli'
      }
    }
     
    stage('Test') {
      steps {
         sh 'npm test'
      }
      }
      
      stage('Build') {
      steps {
      ng build --output-path=dist/dev
      }
      }
    
    stage('Launch App') {
      steps {
    lite-server --baseDir="dist/dev
    }
    }
    
    
         
  }
}
